# Launch Applications Binds #
# # # # # # # # # # # # # # #
bindsym $sup+e exec urxvt -name ranger -e ranger
bindsym $sup+m exec urxvt -name ncmpcpp -e ncmpcpp

# # # # # # # # # # # # 
# Music Keybindings   #
# # # # # # # # # # # #
bindsym $mod+Up exec --no-startup-id pamixer --allow-boost -i 5
bindsym $mod+Down exec --no-startup-id pamixer --allow-boost -d 5
bindsym $mod+Delete exec --no-startup-id pamixer --allow-boost -t
bindsym $mod+i exec --no-startup-id sh ~/Scripts/movesinks.sh 1
bindsym $mod+Shift+i exec --no-startup-id sh ~/Scripts/movesinks.sh 0

# # # # # # # # # # # # #
# Command Keybindings   #
# # # # # # # # # # # # #

# Screenshot region and uniquely identify in picture folder
bindsym $mod+q exec maim -s ~/Pictures/$(date +%s).png


bindsym $mod+r mode "resize"

# Kill all focused windows with Control+q
bindsym Control+q kill

# Do not follow the mouse
focus_follows_mouse no

# Window border
new_window pixel 2

# Setup gaps
gaps inner 10
gaps outer 10

# Rofi keybinds 
bindsym $mod+m exec "rofi -show run"
bindsym $mod+Shift+m exec "rofi -show window"

# Setup triple monitor setup
#exec --no-startup-id xrandr --auto --output DVI-I-1 --mode 1920x1080 --rate 144 --auto --output HDMI-0 --left-of DVI-I-1 --auto --output DP-0 --right-of DVI-I-1 --rotate right
exec --no-startup-id xrandr --auto --output DVI-I-1 --mode 1920x1080 --rate 144 --auto --output HDMI-0 --mode 1920x1080 --rate 60 --left-of DVI-I-1 --auto --output DP-0 --mode 1920x1080 --rate 60 --right-of DVI-I-1 --rotate right

# Setup workspaces 
workspace 1 output HDMI-0
workspace 2 output DVI-I-1
workspace 3 output DP-0

# Map Caps Lock to Esc
exec --no-startup-id setxkbmap -option caps:escape

